{
  "name": "carinho-pet-monorepo",
  "private": true,
  "version": "0.1.1",
  "workspaces": ["frontend", "backend", "worker"],
  "scripts": {
    "fmt": "prettier --write .",
    "lint": "eslint .",
    "typecheck": "tsc -p ./backend/tsconfig.json && tsc -p ./frontend/tsconfig.json",
    "dev": "echo 'Use dev scripts dentro de frontend/ e backend/'",
    "frontend:dev": "npm --workspace frontend run dev",
    "frontend:build": "npm --workspace frontend run build",
    "backend:dev": "npm --workspace backend run dev",
    "backend:build": "npm --workspace backend run build"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.6.0",
    "@typescript-eslint/parser": "^7.6.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4"
  }
}